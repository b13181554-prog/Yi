    "axios": "^1.12.2",
    "bottleneck": "^2.19.5",
    "bull": "^4.16.5",
    "express": "^5.1.0",
    "ioredis": "^5.8.1",
    "isomorphic-dompurify": "^2.28.0",
    "lru-cache": "^11.2.2",
    "mongodb": "^6.20.0",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "technicalindicators": "^3.1.0",
    "tronweb": "^6.0.4"
  }
